{
  "name": "subscriptions",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "build": "bun run src/config/build-client.ts",
    "dev": "concurrently 'bun run build --watch' 'bun --watch run src/server.tsx'",
    "serve": "bun run src/server.tsx",
    "lint": "bunx biome format ./src --write && bunx biome check ./src",
    "prepare": "bunx biome check ./src && bun run build",
    "deploy": "bun run prepare && bun run serve"
  },
  "devDependencies": {
    "@biomejs/biome": "1.2.2",
    "bun-types": "latest",
    "concurrently": "^8.2.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@radix-ui/react-select": "^1.2.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
